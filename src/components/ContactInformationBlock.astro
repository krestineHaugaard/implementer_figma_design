---
import {Icon} from "astro-icon/components";
const {icon, title, description} = Astro.props;
---

<dl>
    <Icon name={icon}/>
    <div>
        <dt>{title}</dt>
        <dd>{description}</dl>
    </div>
</dl>

<style>

    dl{
        display: flex;
        gap: 0.5rem;
        max-width: 40ch;
        align-items: center;
    }

    dt{
        font-size: var(--step-0);
    }

    dd{
        font-size: var(--step-1);
        font-weight: var(--font-bold);
    }

    [data-icon="phoneyellow"], [data-icon="timegreen"], [data-icon="location"] {
        width: 2.5rem;
        height: 2.5rem;
    }

</style>