---
import Button from "./Button.astro";
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif}"
);
---

<article class="flow">
    <h2>More case studies</h2>
    <div>
        <Image src={images["/src/assets/images/morecasestudies1.png"]()} alt="More case studies"/>
        <Image src={images["/src/assets/images/morecasestudies2.png"]()} alt="More case studies"/>
        <Image src={images["/src/assets/images/morecasestudies3.png"]()} alt="More case studies"/>
    </div>
    <Button backgroundcolor="primary 3" text="Browse all case studies"/>
</article>

<style>

    article{
        display: grid;
        justify-items: center;
        gap: 1.5rem;
        margin-bottom: var(--space-3xl, 1rem);
    }

    div{
        background-color: var(--gray-scale-2);
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 1rem;
        padding: 1rem;
    }

</style>